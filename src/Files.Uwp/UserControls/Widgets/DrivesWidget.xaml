<UserControl
	x:Class="Files.UserControls.Widgets.DrivesWidget"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Files.UserControls.Widgets"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
	mc:Ignorable="d">
	<Grid>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition
					Width="Auto" />
			</Grid.ColumnDefinitions>

			<!--  Map Drive button  -->
			<Button
				x:Uid="DrivesWidgetMoreOptionsButton"
				Grid.Column="1"
				Width="36"
				Height="32"
				Padding="0"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				AutomationProperties.Name="More drives options"
				Background="Transparent"
				BorderBrush="Transparent"
				ToolTipService.ToolTip="More options...">

				<FontIcon
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontSize="14"
					Glyph="&#xe712;" />

				<Button.Flyout>
					<MenuFlyout>
						<MenuFlyoutItem
							x:Uid="DrivesWidgetOptionsFlyoutMapNetDriveMenuItem"
							Click="MapNetworkDrive_Click"
							Text="Map network drive">
							<MenuFlyoutItem.Icon>
								<FontIcon
									Glyph="&#xE710;" />
							</MenuFlyoutItem.Icon>
						</MenuFlyoutItem>
					</MenuFlyout>
				</Button.Flyout>
			</Button>
		</Grid>

		<muxc:ItemsRepeater
			x:Name="CardsList"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Top"
			ItemsSource="{x:Bind local:DrivesWidget.ItemsAdded, Mode=OneWay}">
			<muxc:ItemsRepeater.Layout>
				<muxc:UniformGridLayout
					ItemsStretch="None"
					MinColumnSpacing="8"
					MinItemHeight="72"
					MinItemWidth="240"
					MinRowSpacing="8"
					Orientation="Horizontal" />
			</muxc:ItemsRepeater.Layout>
			<muxc:ItemsRepeater.ItemTemplate>
				<DataTemplate
					x:DataType="local:DriveCardItem">
					<Button
						Padding="8"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						HorizontalContentAlignment="Stretch"
						VerticalContentAlignment="Stretch"
						AutomationProperties.Name="{x:Bind Item.Text, Mode=OneWay}"
						Click="Button_Click"
						CornerRadius="{StaticResource ControlCornerRadius}"
						PointerPressed="Button_PointerPressed"
						Tag="{x:Bind Item.Path}"
						ToolTipService.ToolTip="{x:Bind Item.Text, Mode=OneWay}">
						<Button.ContextFlyout>
							<MenuFlyout
								Opening="MenuFlyout_Opening">
								<MenuFlyout.Items>
									<MenuFlyoutItem
										x:Name="OpenInNewPane"
										x:Uid="SideBarOpenInNewPane"
										Click="OpenInNewPane_Click"
										DataContext="{x:Bind Item}"
										Text="Open in new pane"
										Visibility="Collapsed">
										<MenuFlyoutItem.Icon>
											<FontIcon
												FontFamily="{StaticResource CustomGlyph}"
												Glyph="&#xF117;" />
										</MenuFlyoutItem.Icon>
									</MenuFlyoutItem>
									<MenuFlyoutItem
										x:Name="OpenInNewTab"
										x:Uid="SideBarOpenInNewTab"
										Click="OpenInNewTab_Click"
										DataContext="{x:Bind Item}"
										Text="Open in new tab">
										<MenuFlyoutItem.Icon>
											<FontIcon
												FontFamily="{StaticResource CustomGlyph}"
												Glyph="&#xF113;" />
										</MenuFlyoutItem.Icon>
									</MenuFlyoutItem>
									<MenuFlyoutItem
										x:Name="OpenInNewWindow"
										x:Uid="SideBarOpenInNewWindow"
										Click="OpenInNewWindow_Click"
										DataContext="{x:Bind Item}"
										Text="Open in new window">
										<MenuFlyoutItem.Icon>
											<FontIcon
												Glyph="&#xE737;" />
										</MenuFlyoutItem.Icon>
									</MenuFlyoutItem>
									<MenuFlyoutItem
										x:Name="PropertiesItem"
										x:Uid="DrivesWidgetContextFlyoutPropertiesMenuItem"
										Click="OpenDriveProperties_Click"
										DataContext="{x:Bind Item}"
										Text="Properties">
										<MenuFlyoutItem.Icon>
											<FontIcon
												Glyph="&#xE946;" />
										</MenuFlyoutItem.Icon>
									</MenuFlyoutItem>
									<MenuFlyoutItem
										x:Name="EjectDevice"
										x:Uid="SideBarEjectDevice"
										x:Load="{x:Bind Item.IsRemovable, Mode=OneWay}"
										Click="EjectDevice_Click"
										DataContext="{x:Bind Item}"
										Text="Eject">
										<MenuFlyoutItem.Icon>
											<FontIcon
												Glyph="&#xF847;" />
										</MenuFlyoutItem.Icon>
									</MenuFlyoutItem>
									<MenuFlyoutItem
										x:Name="DisconnectNetworkDrive"
										x:Uid="SideBarDisconnectNetworkDrive"
										x:Load="{x:Bind Item.IsNetwork, Mode=OneWay}"
										Click="DisconnectNetworkDrive_Click"
										DataContext="{x:Bind Item}"
										Text="Disconnect">
										<MenuFlyoutItem.Icon>
											<FontIcon
												Glyph="&#xF847;" />
										</MenuFlyoutItem.Icon>
									</MenuFlyoutItem>
								</MenuFlyout.Items>
							</MenuFlyout>
						</Button.ContextFlyout>
						<Grid
							HorizontalAlignment="Stretch"
							VerticalAlignment="Stretch"
							ColumnSpacing="8">
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="32" />
								<ColumnDefinition
									Width="*" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition
									Height="*" />
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="*" />
							</Grid.RowDefinitions>
							<Image
								Grid.RowSpan="3"
								Grid.Column="0"
								Stretch="Uniform"
								VerticalAlignment="Center"
								HorizontalAlignment="Center"
								x:Phase="1"
								Source="{x:Bind Thumbnail, Mode=OneWay}" />

							<TextBlock
								x:Name="ItemLocationName"
								Grid.Row="0"
								Grid.Column="1"
								VerticalAlignment="Stretch"
								FontSize="14"
								FontWeight="Medium"
								Text="{x:Bind Item.Text, Mode=OneWay}"
								TextTrimming="CharacterEllipsis"
								TextWrapping="NoWrap" />

							<Grid
								Grid.Row="1"
								Grid.Column="1"
								Grid.ColumnSpan="8"
								VerticalAlignment="Stretch">
								<Grid.ColumnDefinitions>
									<ColumnDefinition
										Width="*" />
									<ColumnDefinition
										Width="Auto" />
								</Grid.ColumnDefinitions>
								<muxc:ProgressBar
									Grid.Column="0"
									AutomationProperties.AccessibilityView="Raw"
									Maximum="{x:Bind Item.MaxSpace.GigaBytes, Mode=OneWay}"
									Visibility="{x:Bind Item.ShowDriveDetails, Mode=OneWay}"
									Value="{x:Bind Item.SpaceUsed.GigaBytes, Mode=OneWay}" />

								<Button
									x:Name="GoToStorageSense"
									x:Uid="DrivesWidgetOpenStorageSenseButton"
									Grid.Column="1"
									Width="28"
									Height="28"
									Margin="4,0,0,0"
									Padding="0"
									HorizontalContentAlignment="Center"
									VerticalContentAlignment="Center"
									x:Load="{x:Bind Item.ShowStorageSense}"
									AutomationProperties.Name="Open Storage Sense"
									Background="Transparent"
									BorderBrush="Transparent"
									Click="GoToStorageSense_Click"
									Tag="{x:Bind Item.Path}"
									ToolTipService.ToolTip="Open Storage Sense">
									<FontIcon
										HorizontalAlignment="Center"
										VerticalAlignment="Center"
										FontSize="14"
										Glyph="&#xE946;" />
								</Button>
							</Grid>

							<TextBlock
								Grid.Row="2"
								Grid.Column="1"
								VerticalAlignment="Bottom"
								x:Phase="1"
								FontSize="12"
								Text="{x:Bind Item.SpaceText, Mode=OneWay}"
								TextTrimming="CharacterEllipsis"
								TextWrapping="NoWrap"
								ToolTipService.ToolTip="{x:Bind Item.SpaceText, Mode=OneWay}"
								Visibility="{x:Bind Item.ShowDriveDetails, Mode=OneWay}" />
						</Grid>
					</Button>
				</DataTemplate>
			</muxc:ItemsRepeater.ItemTemplate>
		</muxc:ItemsRepeater>
	</Grid>
</UserControl>